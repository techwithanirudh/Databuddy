{
  "name": "databuddy",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -- turbo run dev",
    "start": "turbo run start",
    "lint": "bunx biome check ./",
    "format": "bunx --bun biome lint --write --unsafe ./",
    "check-types": "tsc --noEmit --project .",
    "db:generate": "dotenv -- turbo run db:generate",
    "db:studio": "dotenv -- turbo run db:studio",
    "clickhouse:init": "dotenv -- turbo run clickhouse:init",
    "db:push": "dotenv -- turbo run db:push",
    "db:reset": "dotenv -- turbo run db:reset",
    "db:migrate": "dotenv -- turbo run db:migrate",
    "db:deploy": "dotenv -- turbo run db:deploy",
    "db:seed": "dotenv -- turbo run db:seed -- --",
    "email:dev": "cd packages/email && bun run dev",
    "sdk:build": "cd packages/sdk && bun run build",
    "dashboard:dev": "dotenv -- cd apps/dashboard; bun run dev"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/bun": "latest",
    "dotenv": "^17.2.2",
    "dotenv-cli": "^10.0.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "ultracite": "5.0.49"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "react": "19.0.0",
      "react-dom": "19.0.0",
      "next": "^15.3.4",
      "typescript": "^5.8.3",
      "zod": "3.25.76",
      "tailwindcss": "^4.1.4",
      "autumn-js": "^0.0.101",
      "stripe": "^18.2.1",
      "dayjs": "^1.11.13",
      "elysia": "^1.3.4",
      "pino": "^9.7.0",
      "vitest": "^3.2.4",
      "@phosphor-icons/react": "^2.1.10",
      "@radix-ui/react-dialog": "^1.1.14",
      "@radix-ui/react-popover": "^1.1.14",
      "@radix-ui/react-slot": "^1.2.3",
      "@radix-ui/react-switch": "^1.2.5",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "tailwind-merge": "^3.2.0",
      "framer-motion": "^12.23.6",
      "sonner": "^2.0.6",
      "vaul": "^1.1.2",
      "@tanstack/react-query": "^5.82.0",
      "@trpc/client": "^11.4.3",
      "@trpc/react-query": "^11.4.3",
      "@trpc/server": "^11.4.3",
      "superjson": "^2.2.2",
      "jotai": "^2.12.5",
      "@clickhouse/client": "^1.11.1",
      "@clickhouse/client-web": "^1.11.1",
      "@logtail/edge": "^0.5.4",
      "@logtail/js": "^0.5.5",
      "@logtail/pino": "^0.5.5",
      "@biomejs/biome": "2.1.2",
      "@types/bun": "latest",
      "ultracite": "5.0.49",
      "turbo": "^2.5.2"
    }
  },
  "module": "index.ts",
  "type": "module"
}
